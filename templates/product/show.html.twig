{% extends 'base.html.twig' %}

{% block title %}{{parent()}}{{product.name}}{% endblock %}

{% block content %}

    <div class="row mt-5">
        <div class="col-md-4">
            <img src="/assets/images/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
        </div>
        <div class="col-md-8">
            <h1>{{ product.name }}</h1>
            <p>{{product.subtitle}}</p>
            <span class="product-page-price">{{(product.price /100)|number_format(2,',','.')}}€</span>
            <hr>
            <p>{{product.description}}</p>
            <a href="{{ path('app_add_to_cart', {'id': product.id}) }}" class="btn btn-primary">Ajouter au panier</a>
        </div>

    </div>
    {# {{dump(product)}} #}
    <hr>
    <h2>Nos meilleures ventes</h2>
    <p>Découvrez les articles les plus vendus</p>
    <div class="row">
        {% for product in products %}
            <div class="col-md-4">
                {% include 'product/single_product.html.twig' %}
            </div>
        {% endfor %}
    </div><!-- /.row -->

{% endblock %}


