{% extends 'base.html.twig' %}

{% block title %}{{parent()}}Ajouter une adresse{% endblock %}

{% block carousel %}
{% endblock %}

{% block content %}

    <h1 class="mt-5">Ajouter une adresse</h1>
    <a href="{{ path('app_account_address') }}">Retour</a>
    <hr>

    {# Formulaire pour ajouter une adresse #}
    {# {{ form(form) }} #}

    {{ form_start(form) }}
    <div class="row">
        <div class="col-12">{{ form_row(form.name) }}</div>
    </div>
    <div class="row">
        <div class="col-12 col-md-4">{{ form_row(form.firstname) }}</div>
        <div class="col-12 col-md-4">{{ form_row(form.lastname) }}</div>
        <div class="col-12 col-md-4">{{ form_row(form.phone) }}</div>
    </div>
    <div class="row">
        <div class="col-12">{{ form_row(form.company) }}</div>
    </div>
    <div class="row">
        <div class="col-12">{{ form_row(form.address) }}</div>
    </div>
    <div class="row">
        <div class="col-12 col-md-4">{{ form_row(form.city) }}</div>
        <div class="col-12 col-md-4">{{ form_row(form.postal) }}</div>
        <div class="col-12 col-md-4">{{ form_row(form.country) }}</div>
    </div>
    {{ form_end(form) }}
    <br><br>
{% endblock %}